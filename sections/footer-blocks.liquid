{{ 'footer-blocks.css' | asset_url | stylesheet_tag }}


<div class="section section--page-width">
    <div>
        <div class="swiper footer-blocks-swiper">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    <div class="swiper-slide">
                        <div class="footer-block-card" style="background-color: {{ section.settings.card_background }};">
                        {% if block.settings.icon != blank %}
                            <div class="footer-block-icon">
                            {{ block.settings.icon }}
                            </div>
                        {% endif %}
                        
                        {% if block.settings.title != blank %}
                            <h3 class="footer-block-title" style="color: {{ section.settings.accent_color }};">{{ block.settings.title }}</h3>
                        {% endif %}
                        
                        {% if block.settings.description != blank %}
                            <p class="footer-block-description" style="color: {{ section.settings.text_color }};">{{ block.settings.description }}</p>
                        {% endif %}
                        </div>
                    </div>
                {% endfor %}
                
            </div>
        
        <!-- Pagination -->
        <div class="footer-blocks-pagination swiper-pagination-dots"></div>
    </div>
</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const footerBlocksSwiper = new Swiper('.footer-blocks-swiper', {
      slidesPerView: 1,
      spaceBetween: 16,
      pagination: {
        el: '.footer-blocks-swiper .footer-blocks-pagination',
        clickable: true,
        type: 'bullets',
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        1150: {
          slidesPerView: 3,
          spaceBetween: 24,
        },
      },
    });
  });
</script>

